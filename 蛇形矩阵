#include<stdio.h>
int guide(int *i,int *j,int n);
int main(){
	int n=0;
	scanf("%d",&n);
	int martix[n][n];
	for(int p=0;p<n;p++){
		for(int q=0;q<n;q++){
			martix[p][q]=0;
		}
	}//初始化； 
	int i=0;
	int j=0;//位置光标
	int cnt=1;
	martix[i][j]=cnt;
	cnt++;
	
	while(i<n-1||j<n-1){
		//printf("$$ok i=%d,j=%d\n",i,j);测试 
//		if(cnt==3){测试 
//			printf("pre when cnt==3,i,j=(%d,%d)\n",i,j);测试 
//		}测试 
        int temp=guide(&i,&j,n); 
		if(temp==0){
			while(i<n&&i>=0&&j<n&&j>=0){
				
				martix[i][j]=cnt;
					//printf("ok i=%d,j=%d,cnt=%d,martix=%d\n",i,j,cnt,martix[i][j]);测试 
				cnt++;
				i--;
				j++;
				//printf("**ok i=%d,j=%d\n",i,j);测试 
			}
			i++;
			j--;
			//printf("***ok i=%d,j=%d\n",i,j);测试 
		}else if(temp==1){
			while(i<n&&i>=0&&j<n&&j>=0){
				martix[i][j]=cnt;
				//printf("ok i=%d,j=%d,cnt=%d,martix=%d\n",i,j,cnt,martix[i][j]);测试 
				cnt++;
				i++;
				j--;
				
			}
			i--;
			j++;
			
		}else{
			break;
		}
		//printf("****ok i=%d,j=%d\n",i,j); 测试 
	}
	//测试printf("finish\n");测试 
	for(int p=0;p<n;p++){
		for(int q=0;q<n;q++){
			printf("%d",martix[p][q]);
			if(q<n-1){
				printf(" ");
			}else{
				printf("\n");
			}
		}
	}//输出 
	return 0;
	 
} 
int guide(int *i,int *j,int n){
	//printf("function get (%d %d)\n",*i ,*j);测试 
	int answer=0;
	if(*i==0&&*j==0){
		(*i)++;
//		int k=0;测试 
//		k=*i;测试 
//		k++;测试 
//		*i=k;测试 
		answer=0;
		//printf("poccesses i j(%d %d)\n",*i ,*j);测试 
	}else if(*i==0&&*j!=0&&*j!=n-1){
		(*j)++;
		answer=1;
	}else if(*i!=0&&*j==0&&*i!=n-1){
		(*i)++;
		answer=0;
	}else if(*i==n-1&&*j!=n-1){
		(*j)++;
		answer=0;
	}else if(*j==n-1&&*i!=n-1){
		(*i)++;
		answer=1;
	}else{
		answer=2;
	}
	//printf("function returned %d\n",answer);测试 
	//printf("**guide to position(%d %d).\n",*i,*j);测试 
	return answer;
}
